{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake -DENABLE_DEBUG=ON --build build",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "cmake -DENABLE_DEBUG=ON --build build",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./build/robot_arm_modeling",
            "group": "test",
            "dependsOn": ["Build"]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "cd build && ctest --output-on-failure",
            "group": "test",
            "dependsOn": ["Build"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm -rf build && mkdir build && cd build && cmake ..",
            "group": "build"
        }
    ]
}